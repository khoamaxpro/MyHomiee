<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/linearDeviceList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginBottom="5dp"
        android:background="#FCDADA"
        android:padding="5dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/txtRoomNameLampFanDevice"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BedRoom"
            android:textStyle="bold"
            android:textColor="#505050"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"></TextView>
        <ImageView
            android:id="@+id/imgDeviceList"
            android:layout_weight="9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/graph_small"></ImageView>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearDeviceGraph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="#F9F9F9"
        android:layout_marginBottom="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgGraph"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ></ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/txtHourButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hour"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textStyle="bold"
                android:textColor="#929292"></TextView>
            <TextView
                android:id="@+id/txtDayButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textStyle="bold"
                android:textColor="#F83737"></TextView>
            <TextView
                android:id="@+id/txtWeekButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Week"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textStyle="bold"
                android:textColor="#929292"></TextView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>